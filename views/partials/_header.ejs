<header>
  <nav class="navbar navbar-expand-md navbar-dark bg-success">
    <a class="navbar-brand" href="/urls">TinyApp</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav mr-auto">
        <a class="nav-item nav-link" href="/urls">My URLs</a>
        <a class="nav-item nav-link" href="/urls/new">Create New URL</a>
      </div>
        <% if ( user ) { %>
          <span class="navbar-text ml-5 mr-sm-2">Logged in as: <%= user.email %></span>
          <form class="form-inline my-2 my-lg-0 mr-2" action="/logout" method="POST">
              <button type="submit" class="btn btn-outline-dark my-2 my-sm-0 mx-2">Logout</button>
          </form>
        <% } else { %>
          <form class="form-inline my-2 my-lg-0" action="/login" method="POST">
            <div class="form-group mr-sm-2">
              <input class="form-control" type="text" name="username" placeholder="username" aria-label="username">
              <button type="submit" class="btn btn-outline-dark my-2 my-sm-0 mx-2">Sign in</button>
            </div>
          </form>
        <% } %>
    </div>
  </nav>
</header>